{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": [
            "es6"
        ],
        "target": "es6",
        "module": "commonjs",
        "noEmitOnError": true,
        "strict": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "outDir": "build",
        "rootDir": "./src",
        "removeComments": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "exclude": [
        "node_modules"
    ]
}